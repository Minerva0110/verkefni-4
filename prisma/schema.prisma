generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Category {
  id        String     @id @default(uuid())
  name      String
  slug      String     @unique
  questions Question[] @relation("CategoryQuestions")
}

model Quiz {
  id        String     @id @default(uuid())
  title     String     @unique
  file      String
  questions Question[] @relation("QuizQuestions")
}

model Question {
  id         String   @id @default(uuid())
  content    String
  quizId     String?
  categoryId String
  answers    Answer[] @relation("QuestionAnswers")
  category   Category @relation("CategoryQuestions", fields: [categoryId], references: [id])
  quiz       Quiz?    @relation("QuizQuestions", fields: [quizId], references: [id])
}

model Answer {
  id         String   @id @default(uuid())
  content    String
  correct    Boolean
  questionId String
  question   Question @relation("QuestionAnswers", fields: [questionId], references: [id])
}
